<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_page.AllFashionsFragment">

    <ImageButton
        android:id="@+id/btn_all"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorClear"
        android:src="@drawable/type_button_background"
        app:layout_constraintBottom_toTopOf="@id/grid_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txv_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="ALL"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_all"
        app:layout_constraintEnd_toEndOf="@id/btn_all"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/btn_all"
        app:layout_constraintTop_toTopOf="@id/btn_all"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imv_all_selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_all"
        app:layout_constraintStart_toStartOf="@id/btn_all"
        app:layout_constraintTop_toTopOf="@id/btn_all"
        app:layout_constraintEnd_toEndOf="@id/btn_all"
        android:background="@color/colorDarkWhiteClear"/>

    <ImageButton
        android:id="@+id/btn_fav"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@color/colorClear"
        android:scaleType="fitXY"
        android:src="@drawable/type_button_background"
        app:layout_constraintBottom_toTopOf="@id/grid_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/btn_all"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imv_fav"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/active_heart"
        app:layout_constraintBottom_toBottomOf="@id/btn_fav"
        app:layout_constraintStart_toStartOf="@id/btn_fav"
        app:layout_constraintTop_toTopOf="@id/btn_fav" />

    <TextView
        android:id="@+id/txv_fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="FAV"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/btn_fav"
        app:layout_constraintEnd_toEndOf="@id/btn_fav"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btn_fav"
        app:layout_constraintTop_toTopOf="@id/btn_fav"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/imv_fav_selected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_fav"
        app:layout_constraintStart_toStartOf="@id/btn_fav"
        app:layout_constraintTop_toTopOf="@id/btn_fav"
        app:layout_constraintEnd_toEndOf="@id/btn_fav"
        android:background="@color/colorDarkWhiteClear"
        android:visibility="gone"/>




    <GridView
        android:id="@+id/grid_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_all" />

    <TextView
        android:id="@+id/txv_no_fashion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/no_fashion"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_all"
        tools:visibility="gone" />


</android.support.constraint.ConstraintLayout>